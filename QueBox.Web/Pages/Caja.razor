@page "/caja/{IdDiseno:int?}"
@using QueBox.Services
@using QueBox.Models
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components


@inject DisenoService DisenoService
@inject CapaService CapaService
@inject ImagenDecorativaService ImagenDecorativaService
@inject Mathy Mathy

@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider

@using Plotly.Blazor
@using Plotly.Blazor.Traces
@using Plotly.Blazor.LayoutLib

<PageTitle>Diseno</PageTitle>

<main>

    @if (editingDiseno == null)
    {
        <div class="alert alert-info">
            No hay diseños disponibles para mostrar o el diseño solicitado no existe.
        </div>
    }
    else
    {


        <EditForm Model="@editingDiseno" OnValidSubmit="SaveDiseno">

            <DataAnnotationsValidator />
            <ValidationSummary />



            <div class="row g-3 align-items-end mb-3">
                <div class="col-md-3">
                    <label for="largo" class="form-label">Largo:</label>
                    <InputNumber TValue="float" @bind-Value="editingDiseno.Largo" id="largo" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label for="alto" class="form-label">Alto:</label>
                    <InputNumber TValue="float" @bind-Value="editingDiseno.Alto" id="alto" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label for="ancho" class="form-label">Ancho:</label>
                    <InputNumber TValue="float" @bind-Value="editingDiseno.Ancho" id="ancho" class="form-control" />
                </div>

                <div class="col-md-3">
                    <button class="btn btn-primary w-100" type="submit">Que Caja!</button>
                </div>
            </div>

        </EditForm>

        <div class="row g-3">

            <div class="col">



                @if (isLoading)
                {
                    <p class=" mb-3 col-md-6">Cargando capas...</p>
                }
                else
                {

                    <div id="accordion mb-3 col-md-6">
                        @foreach (var capa in capas)
                        {
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0 d-flex justify-content-between align-items-center">
                                        <button class="accordion-button collapsed flex-grow-1 me-2" @onclick="() => ToggleBootstrapCollapse(capa.Numero.ToString())">
                                            La capa @capa.Numero
                                        </button>
                                        <button class="btn btn-success btn-sm"
                                                @onclick="() => CreateImagenDecorativa(capa.Id_Capa)">
                                            ➕ Imagen
                                        </button>
                                    </h5>
                                </div>

                                <div id="@capa.Numero">
                                    <div class="card-body">

                                        @foreach (var imagenDecorativa in imagenDecorativas.Where(i => i.Id_Capa == capa.Id_Capa))

                                        {
                                            <div class="card mb-3">
                                                <div class="card-header d-flex justify-content-between align-items-center">
                                                    <h5 class="mb-0">
                                                        <button class="accordion-button collapsed" @onclick="() => ToggleBootstrapCollapse(imagenDecorativa.Url + imagenDecorativa.Id_Img)">
                                                            La imagen @imagenDecorativa.Id_Img
                                                        </button>
                                                    </h5>
                                                    <button class="btn btn-danger btn-sm"
                                                            @onclick="() => DeleteImagenDecorativa(imagenDecorativa.Id_Img)">
                                                        🗑️ Eliminar
                                                    </button>
                                                </div>

                                                <div id="@(imagenDecorativa.Url + imagenDecorativa.Id_Img)">

                                                    <EditForm class="card-body" Model="@imagenDecorativa" OnValidSubmit="() => SaveImagenDecorativa(imagenDecorativa)">
                                                        <DataAnnotationsValidator />
                                                        <ValidationSummary />

                                                        <div class="mb-3">
                                                            <label for="alto" class="form-label">Alto:</label>
                                                            <InputNumber @bind-Value="imagenDecorativa.Alto" id="alto" class="form-control" />
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="ancho" class="form-label">Ancho:</label>
                                                            <InputNumber @bind-Value="imagenDecorativa.Ancho" id="ancho" class="form-control" />
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="url" class="form-label">Url:</label>
                                                            <InputText @bind-Value="imagenDecorativa.Url" id="url" class="form-control" />
                                                        </div>

                                                        <button class="mb-3 col-md-4 row btn btn-primary" type="submit">Enviar</button>

                                                    </EditForm>

                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                }
            </div>
            <div class="col">

                @if (data != null && data.Any())
                {
                    <PlotlyChart class="col-md-6" @bind-Config="config" @bind-Layout="layout" @bind-Data="data" @ref="chart" />
                }
                else
                {
                    <h5 class="col-md-6">No data.</h5>
                }
            </div>
        </div>
    }

</main>

@code {

    private List<Diseno> disenos = new();
    private Diseno? editingDiseno;
    private List<Capa> capas = new();
    private List<ImagenDecorativa> imagenDecorativas = new();
    private ImagenDecorativa? editingImagenDecorativa;
    private bool isLoading = true;


    IList<ITrace> data = new List<ITrace>();

    // Las mallas deben ser inicializadas una sola vez, la lógica de Mathy estática es correcta para esto.
    static List<object> xCoords = Mathy.LinspaceList(0, 1, 128);
    static Tuple<List<object>, List<object>> mesh = Mathy.CreateMeshGrid(xCoords, xCoords);
    static List<object> x = mesh.Item1;
    static List<object> z = mesh.Item2;
    static List<object> y_1 = Mathy.CreateListOfListOfOnesCapacity(128);
    static List<object> y_0 = Mathy.CreateListOfListOfZerosCapacity(128);

    PlotlyChart chart;

    Config config = new Config();
    Layout layout = new Layout()
    {
        Width = 890,
        Height = 750
    };


    [Parameter]
    public int? IdDiseno { get; set; }

    protected override async Task OnInitializedAsync()
    {
        editingDiseno = null;
        editingImagenDecorativa = new ImagenDecorativa();
        int disenoIdToLoad = 0;

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(userId))
        {
            isLoading = false;
            return;
        }

        if (IdDiseno.HasValue && IdDiseno.Value > 0)
        {
            disenoIdToLoad = IdDiseno.Value;
        }
        else
        {
            disenos = (await DisenoService.GetDisenosAsync(userId))?.ToList() ?? new List<Diseno>();
            if (disenos.Any())
            {
                disenoIdToLoad = disenos.First().Id_Diseno;
                editingDiseno = disenos.First();
            }
        }

        if (disenoIdToLoad > 0)
        {
            if (editingDiseno == null)
            {
                editingDiseno = await DisenoService.GetDisenoByIdAsync(disenoIdToLoad);
            }

            capas = (await CapaService.GetCapasByDisenoAsync(disenoIdToLoad))?.ToList() ?? new List<Capa>();
            imagenDecorativas = (await ImagenDecorativaService.GetImagenDecorativasByDisenoAsync(disenoIdToLoad))?.ToList() ?? new List<ImagenDecorativa>();
        }
        else
        {
            capas = new List<Capa>();
            imagenDecorativas = new List<ImagenDecorativa>();
        }
        isLoading = false;

        // Llamada asíncrona para cargar los datos de la caja, incluyendo las imágenes
        await Create_surfaceX();
        Create_surfaceY();
        Create_surfaceZ();
    }

    private async Task SaveDiseno()
    {
        if (editingDiseno == null)
            return;

        if (editingDiseno.Id_Diseno > 0)
        {
            await DisenoService.UpdateDisenoAsync(editingDiseno);
        }

        // Recargar el gráfico si las dimensiones cambian
        data.Clear();
        await Create_surfaceX();
        Create_surfaceY();
        Create_surfaceZ();

        StateHasChanged();
    }

    private async Task SaveImagenDecorativa(ImagenDecorativa editingImagenDecorativa)
    {
        if (editingImagenDecorativa == null)
            return;

        if (editingImagenDecorativa.Id_Img == 0)
        {
            var created = await ImagenDecorativaService.CreateImagenDecorativaAsync(editingImagenDecorativa);
            if (created != null)
                imagenDecorativas.Insert(0, created);
        }
        else
        {
            await ImagenDecorativaService.UpdateImagenDecorativaAsync(editingImagenDecorativa);
            var index = imagenDecorativas.FindIndex(d => d.Id_Img == editingImagenDecorativa.Id_Img);
            if (index >= 0)
                imagenDecorativas[index] = editingImagenDecorativa;
        }

        // --- RECARGA GRÁFICO ---
        data.Clear();
        await Create_surfaceX(); 
        Create_surfaceY();
        Create_surfaceZ();
        // -----------------------

        StateHasChanged();
    }


    private async Task CreateImagenDecorativa(int idCapa)
    {
        var nuevaImagen = new ImagenDecorativa
        {
            Id_Capa = idCapa,
            Alto = 1,
            Ancho = 1,
            Url = "default.png"
        };

        var created = await ImagenDecorativaService.CreateImagenDecorativaAsync(nuevaImagen);

        if (created != null)
        {
            imagenDecorativas.Add(created);
            StateHasChanged();
        }
    }

    private async Task DeleteImagenDecorativa(int idImagen)
    {
        await ImagenDecorativaService.DeleteImagenDecorativaAsync(idImagen);

        var imagenAEliminar = imagenDecorativas.FirstOrDefault(i => i.Id_Img == idImagen);
        if (imagenAEliminar != null)
        {
            imagenDecorativas.Remove(imagenAEliminar);

            // --- RECARGA GRÁFICO ---
            data.Clear();
            await Create_surfaceX(); 
            Create_surfaceY();
            Create_surfaceZ();
            // -----------------------
        }

        StateHasChanged();
    }


    public async Task Create_surfaceX()
    {
        // Capa 1
        Surface mySurfaceXOne = new Surface
            {
                X = y_1,
                Y = x,
                Z = z,
            //SurfaceColor = color,
            //ColorScale = "Rainbow",
                SurfaceColor = y_1,
                ColorScale = new object[]
                {
           new object[] { 0, "#3E2723" },  // Café muy oscuro
                        new object[] { 1, "#5D4037" }   // Café oscuro
                 },
                ShowScale = false
            };

        data.Add(mySurfaceXOne);

        IEnumerable<Capa> capas1 = capas.Where(i => i.Id_Capa == 1);

        if (capas1 != null)
        {
            foreach (var capa in capas1)

            {
                foreach (var imagenDecorativa in imagenDecorativas.Where(i => i.Id_Capa == capa.Id_Capa))
                {

                    if (imagenDecorativa != null && !string.IsNullOrEmpty(imagenDecorativa.Url) && imagenDecorativa.Url != "default.png")
                    
                    {
                        Mathy mathy = new Mathy();

                        List<Object> color = await mathy.GetGrayscalePixelsFromUrl(imagenDecorativa.Url);


                        Surface mySurfaceImage = new Surface
                        {
                            X = y_1,
                            Y = x,
                            Z = z,
                            SurfaceColor = color,
                            ColorScale = "Greys",
                            ShowScale = false
                        };

                        data.Add(mySurfaceImage);
                    }
                }
            }
        }
        // Capa 3
        Surface mySurfaceXZero = new Surface
            {
                X = y_0,
                Y = x,
                Z = z,
            //SurfaceColor = color,
            //ColorScale = "Rainbow",
                SurfaceColor = y_1,
                ColorScale = new object[]
                {
           new object[] { 0, "#3E2723" },  // Café muy oscuro
                        new object[] { 1, "#5D4037" }   // Café oscuro
                 },
                ShowScale = false
            };

        data.Add(mySurfaceXZero);

        IEnumerable<Capa> capas3 = capas.Where(i => i.Id_Capa == 3);

        if (capas3 != null)
        {
            foreach (var capa in capas3)

            {
                foreach (var imagenDecorativa in imagenDecorativas.Where(i => i.Id_Capa == capa.Id_Capa))
                {

                    if (imagenDecorativa != null && !string.IsNullOrEmpty(imagenDecorativa.Url) && imagenDecorativa.Url != "default.png")

                    {
                        Mathy mathy = new Mathy();

                        List<Object> color = await mathy.GetGrayscalePixelsFromUrl(imagenDecorativa.Url);


                        Surface mySurfaceImage = new Surface
                        {
                            X = y_1,
                            Y = x,
                            Z = z,
                            SurfaceColor = color,
                            ColorScale = "Greys",
                            ShowScale = false
                        };

                        data.Add(mySurfaceImage);
                    }
                }
            }
        }
    }
    // Los siguientes métodos permanecen SÍNCRONOS ya que no hacen llamadas a servicios asíncronos.
    
    public async Task Create_surfaceY()
    {
        // Capa 2 (Y=1)
        Surface mySurfaceYOne = new Surface
        {
            X = x,
            Y = y_1,
            Z = z,
            SurfaceColor = y_1,
            ColorScale = new object[]
            {
            new object[] { 0, "#3E2723" },
