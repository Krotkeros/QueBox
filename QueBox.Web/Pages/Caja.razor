        };

        data.Add(mySurfaceYOne);

        IEnumerable<Capa> capas2 = capas.Where(i => i.Id_Capa == 2);

        if (capas2 != null)
        {
            foreach (var capa in capas2)

            {
                foreach (var imagenDecorativa in imagenDecorativas.Where(i => i.Id_Capa == capa.Id_Capa))
                {

                    if (imagenDecorativa != null && !string.IsNullOrEmpty(imagenDecorativa.Url) && imagenDecorativa.Url != "default.png")

                    {
                        Mathy mathy = new Mathy();

                        List<Object> color = await mathy.GetGrayscalePixelsFromUrl(imagenDecorativa.Url);


                        Surface mySurfaceImage = new Surface
                        {
                            X = y_1,
                            Y = x,
                            Z = z,
                            SurfaceColor = color,
                            ColorScale = "Greys",
                            ShowScale = false
                        };

                        data.Add(mySurfaceImage);
                    }
                }
            }
        }

        // Capa 4 (Y=0)
        Surface mySurfaceYZero = new Surface
        {
            X = x,
            Y = y_0,
            Z = z,
            SurfaceColor = y_1,
            ColorScale = new object[]
            {
            new object[] { 0, "#3E2723" },
            new object[] { 1, "#5D4037" }
            },
            ShowScale = false
        };

        data.Add(mySurfaceYZero);

        IEnumerable<Capa> capas4 = capas.Where(i => i.Id_Capa == 4);

        if (capas4 != null)
        {
            foreach (var capa in capas4)

            {
                foreach (var imagenDecorativa in imagenDecorativas.Where(i => i.Id_Capa == capa.Id_Capa))
                {

                    if (imagenDecorativa != null && !string.IsNullOrEmpty(imagenDecorativa.Url) && imagenDecorativa.Url != "default.png")

                    {
                        Mathy mathy = new Mathy();

                        List<Object> color = await mathy.GetGrayscalePixelsFromUrl(imagenDecorativa.Url);


                        Surface mySurfaceImage = new Surface
                        {
                            X = y_1,
                            Y = x,
                            Z = z,
                            SurfaceColor = color,
                            ColorScale = "Greys",
                            ShowScale = false
                        };

                        data.Add(mySurfaceImage);
                    }
                }
            }
        }
    }

    public void Create_surfaceZ()
    {
        // Floor (Z=0)
        Surface mySurfaceZZero = new Surface
        {
            X = x,
            Y = z,
            Z = y_0,
            SurfaceColor = y_1,
            ColorScale = new object[]
            {
            new object[] { 0, "#3E2723" },
            new object[] { 1, "#5D4037" }
            },
            ShowScale = false
        };

        data.Add(mySurfaceZZero);
    }


    private async Task ToggleBootstrapCollapse(string elementid)
    {
        await JS.InvokeVoidAsync("bootstrapInterop.toggleBootstrapCollapse", elementid);
    }

}