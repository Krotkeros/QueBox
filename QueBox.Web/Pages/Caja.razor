                                                    <div class="mb-3">
                                                        <label for="id_Capa" class="form-label">Id_Capa:</label>
                                                        <InputNumber @bind-Value="imagenDecorativa.Id_Capa" id="id_Capa" class="form-control" />
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="alto" class="form-label">Alto:</label>
                                                        <InputNumber @bind-Value="imagenDecorativa.Alto" id="alto" class="form-control" />
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="ancho" class="form-label">Ancho:</label>
                                                        <InputNumber @bind-Value="imagenDecorativa.Ancho" id="ancho" class="form-control" />
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="url" class="form-label">Url:</label>
                                                        <InputText @bind-Value="imagenDecorativa.Url" id="url" class="form-control" />
                                                    </div>

                                                    <button class="mb-3 col-md-4 row btn btn-primary" type="submit">Enviar</button>

                                                </EditForm>

                                            </div>
                                        </div>
                                    }
                                    @if (editingDiseno != null)
                                    {
                                    }

                                </div>
                            </div>
                        </div>
                    </div>

                }
            }

            @if (data != null)
            {
                <PlotlyChart class="col-md-6" @bind-Config="config" @bind-Layout="layout" @bind-Data="data" @ref="chart" />
            }
            else
            {
                <h5 class="col-md-6">No data.</h5>
            }
        </div>
    }

</main>

