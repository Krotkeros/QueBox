@page "/diseno"

<PageTitle>Disenos</PageTitle>

<h1>Disenos</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<EditForm Model="@myModel">

    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="age" class="form-label">Age:</label>
        <InputNumber @bind-Value="myModel.Age" id="age" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="salary" class="form-label">Salary:</label>
        <InputNumber TValue="decimal" @bind-Value="myModel.Salary" id="salary" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="volume" class="form-label">Volume:</label>
        <InputNumber @bind-Value="myModel.Volume" type="range" min="0" max="100" step="1" id="volume" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>



</EditForm>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    
    private MyViewModel myModel = new MyViewModel();

    public class MyViewModel
    {
        public int Age { get; set; }
        public decimal Salary { get; set; }
        public int Volume { get; set; }
    }

}
