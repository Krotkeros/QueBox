@page "/disenos"
@using QueBox.Services
@using QueBox.Models
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims 
@attribute [Authorize(Policy = "AuthenticatedUser")]

@inject DisenoService DisenoService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider // <-- AGREGADO: Para obtener el ID del usuario

<PageTitle>Disenos</PageTitle>

<main>

    <h1>Diseños</h1>

    <p>Lista de diseños disponibles.</p>

    <div class="mb-3">
        <button class="btn btn-primary" @onclick="NewDiseno">Nuevo Diseno</button>
    </div>

    @if (isLoading)
    {
        <p>Cargando...</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre diseno</th>
                    <th>Editar Nombre</th>
                    <th>Borrar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var diseno in disenos)
                {
                    <tr>
                        <td>
                            <NavLink class="link" href="Diseno">
                                <span class="mb-2" aria-hidden="true"></span> @diseno.Nombre
                            </NavLink>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning" @onclick="() => EditDiseno(diseno)">Cambiar nombre</button>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteDiseno(diseno.Id_Diseno)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="disenoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="disenoModalLabel">@modalTitle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar" @onclick="CancelEdit"></button>
                </div>
                <div class="modal-body">

                    @if (editingDiseno != null)
                    {
                        <EditForm Model="@editingDiseno" OnValidSubmit="SaveDiseno">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="mb-3">
                                <label class="form-label">Título</label>
                                <InputText class="form-control" @bind-Value="editingDiseno.Nombre" />
                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Guardar</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="CancelEdit">Cancelar</button>
                            </div>
                        </EditForm>
                    }

                </div>
            </div>
        </div>
    </div>
</main>

@code {
    private List<Diseno> disenos = new();
    private Diseno? editingDiseno;
    private bool isLoading = true;
    private string modalTitle = "Nuevo Diseno";
    
    // Almacena el ID del usuario autenticado para usarlo en las peticiones.
    private string? userId; 

    private async Task ShowModal()
    {
        await JS.InvokeVoidAsync("bootstrapInterop.showModal", "postModal");
    }

    private async Task HideModal()
    {
        await JS.InvokeVoidAsync("bootstrapInterop.hideModal", "postModal");
    }

    // --- CAMBIO CLAVE: Obtener el userId y filtrar la lista ---
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // 1. Extraer el Claim NameIdentifier (ID del usuario)
        userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(userId))
        {
            // En teoría, @Authorize impide esto, pero es buen manejo de error.
            disenos = new List<Diseno>();
        }
        else
        {
            // 2. Pasar el userId al servicio (que a su vez lo envía al API Controller)
            try
            {
                disenos = (await DisenoService.GetDisenosAsync(userId))?.ToList() ?? new List<Diseno>();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al cargar diseños: {ex.Message}");
                disenos = new List<Diseno>();
            }
        }
        isLoading = false;
    }

    // --- CAMBIO CLAVE: Asignar el userId al nuevo diseño ---
    private async void NewDiseno()
    {
        if (string.IsNullOrEmpty(userId) || !int.TryParse(userId, out int idUsuario))
        {
            // No se puede crear si no tenemos un ID de usuario válido
            Console.WriteLine("Error: El usuario no está autenticado o el ID es inválido.");
            return;
        }

        // 1. Crea la instancia del nuevo diseño
        editingDiseno = new Diseno 
        { 
            Id_Usuario = idUsuario // <-- USA EL ID REAL DEL USUARIO LOGUEADO
        }; 
        
        modalTitle = "Nuevo Diseno";
        await ShowModal();
        StateHasChanged();
    }


    private async void EditDiseno(Diseno diseno)
    {
        // Se crea una copia de la instancia antes de editar
        editingDiseno = new Diseno
        {
            Id_Diseno = diseno.Id_Diseno,
            Id_Usuario = diseno.Id_Usuario,
            Largo = diseno.Largo,
            Alto = diseno.Alto,
            Ancho = diseno.Ancho,
            Nombre = diseno.Nombre
        };
        modalTitle = "Editar Diseno";
        await ShowModal();
        StateHasChanged();
    }

    private async Task SaveDiseno()
    {
        if (editingDiseno == null)
            return;

        // Si es un diseño nuevo (Id_Diseno == 0), el Id_Usuario ya fue asignado en NewDiseno().
        if (editingDiseno.Id_Diseno == 0)
        {
            var created = await DisenoService.CreateDisenoAsync(editingDiseno);
            if (created != null)
                disenos.Insert(0, created);
        }
        else
        {
            await DisenoService.UpdateDisenoAsync(editingDiseno);
            var index = disenos.FindIndex(d => d.Id_Diseno == editingDiseno.Id_Diseno);
            if (index >= 0)
                disenos[index] = editingDiseno;
        }

        editingDiseno = null;
        await HideModal();
        StateHasChanged();
    }

    private async void CancelEdit()
    {
        editingDiseno = null;
        await HideModal();
        StateHasChanged();
    }

    private async Task DeleteDiseno(int id)
    {
        await DisenoService.DeleteDisenoAsync(id);
        disenos = disenos.Where(d => d.Id_Diseno != id).ToList();
        StateHasChanged();
    }
}