@page "/usuarios"
@using QueBox.Services
@using QueBox.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "RequireAdminId")]

@inject UsuarioService UsuarioService
@inject IJSRuntime JS

<PageTitle>Usuarios</PageTitle>

<main>
    <h1>Usuarios</h1>

    <p>Página restringida: Solo el administrador (ID 1) puede ver y gestionar usuarios.</p>

    @if (isLoading)
    {
        <p>Cargando...</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre usuario</th>
                    <th>Editar Nombre</th>
                    <th>Borrar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in usuarios)
                {
                    <tr>
                        <td>@usuario.Id_Usuario</td>
                        <td>
                            <span class="mb-2" aria-hidden="true"></span> @usuario.Nombre
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning">Cambiar nombre</button>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-danger">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</main>

@code {
    private List<Usuario> usuarios = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        usuarios = await UsuarioService.GetUsuariosAsync();
        isLoading = false;
    }
}